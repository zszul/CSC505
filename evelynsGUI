import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

    class SeatGUI implements ActionListener {
        JTextField row;
        JTextField col;
        final int rows = 6;
        final int cols = 6;
    
        SeatGUI() {
            JFrame frame = new JFrame("Seat Purchasing");
        JPanel p1 = new JPanel();
        p1.setLayout(new GridLayout(15, 30, 4, 4));
        JPanel p2 = new JPanel();
        p2.setLayout(new FlowLayout());
        JPanel p3 = new JPanel();
        p3.setLayout(new FlowLayout());
        JPanel p4 = new JPanel();
        p4.setLayout(new FlowLayout());
        JPanel p5 = new JPanel();
        p5.setLayout(new FlowLayout());
        frame.setSize(800, 800);
        frame.setLayout(new BorderLayout());
    
        frame.add(p1, BorderLayout.CENTER);
        frame.add(p2, BorderLayout.NORTH);
        frame.add(p3, BorderLayout.EAST);
        frame.add(p4, BorderLayout.WEST);
        frame.add(p5, BorderLayout.SOUTH);
    
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

    
        ImageIcon redSeat = new ImageIcon("red.jpg");
        ImageIcon greenSeat = new ImageIcon("green.jpg");
        JButton calculate = new JButton("Calculate");
        p5.add(calculate);
        calculate.addActionListener(this);
        JToggleButton seat[][] = new JToggleButton[rows][cols];
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                seat[i][j] = new JToggleButton(greenSeat);
                seat[i][j].setSize(25, 25);
                seat[i][j].setSelectedIcon(redSeat);
                seat[i][j].putClientProperty("row", i);
                seat[i][j].putClientProperty("col", j);
                    seat[i][j].addActionListener(this);
                    p1.add(seat[i][j]);
                }
            }
            frame.setVisible(true);
        }
    
    
        public void actionPerformed(ActionEvent ae) {
    System.out.println("Button Clicked");
        }
    
    }
    
    class SeatGUIdemo {
        public static void main(String[] args) {
            SwingUtilities.invokeLater(new Runnable() {
                public void run() {
                    new SeatGUI();
                }
            });
        }
    }

